{
  "name": "functions",
  "scripts": {
    "test": "NODE_ENV=test FIRESTORE_EMULATOR_HOST=127.0.0.1:8080 TS_NODE_PROJECT=tsconfig.test.json mocha --trace-uncaught -r ts-node/register 'test/__tests__/**/*.ts'",
    "test:nanopub": "NO_MOCHA_HOOKS=true yarn run test --grep 'publishes a correctly formatted mock nanopub to the test server'",
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch-test": "rm -rf ./lib-test & tsc --watch -p ./tsconfig.test.json",
    "build:watch": "rm -rf ./lib & tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@nanopub/sign": "^0.1.4",
    "@types/n3": "^1.16.4",
    "@types/node-forge": "^1.3.11",
    "@types/pino": "^7.0.5",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "crypto-js": "^4.2.0",
    "express": "^4.18.2",
    "fetch-sparql-endpoint": "^4.1.1",
    "firebase-admin": "^12.1.1",
    "firebase-functions": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "n3": "^1.17.2",
    "node-fetch": "^3.3.2",
    "node-forge": "^1.3.1",
    "oauth-1.0a": "^2.2.6",
    "postmark": "^4.0.4",
    "twitter-api-v2": "^1.16.2",
    "viem": "^2.7.10",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@johanblumenberg/ts-mockito": "^1.0.41",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "chai": "^4.3.7",
    "dotenv": "^16.4.5",
    "firebase-functions-test": "^3.1.0",
    "mocha": "^10.2.0",
    "puppeteer": "^22.6.3",
    "sinon": "^18.0.0",
    "supertest": "^6.3.4",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "private": true
}
