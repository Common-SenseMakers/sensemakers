{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "typeRoots": ["./src/types", "node_modules/@types", "./src/custom.d.ts"],
  },
  "compileOnSave": true,
  "include": ["src/index.ts", "src/custom.d.ts"],
}
