{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "functions-test",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test",
        "FIRESTORE_EMULATOR_HOST": "localhost:8080",
        "LOG_LEVEL_MSG": "warn",
        "LOG_LEVEL_OBJ": "warn"
      },
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": ["--config", "./.mocharc.js", "test/__tests__/**/*.test.ts"],
      "outputCapture": "std",
      "console": "integratedTerminal"
    }
  ]
}
