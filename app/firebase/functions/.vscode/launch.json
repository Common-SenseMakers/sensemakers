{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "functions-test",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test",
        "FIRESTORE_EMULATOR_HOST": "127.0.0.1:8080",
        "LOG_LEVEL_MSG": "debug",
        "LOG_LEVEL_OBJ": "debug",
        "USE_REAL_TWITTERX": "false",
        "USE_REAL_NANOPUB": "false",
        "USE_REAL_PARSER": "false",
        "USE_REAL_EMAIL": "false",
        "APP_URL": "http://localhost:3000"
      },
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": ["--config", "./.mocharc.js", "test/__tests__/**/*.ts"],
      "outputCapture": "std",
      "console": "integratedTerminal"
    },
    {
      "name": "nanopub-test",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test",
        "FIRESTORE_EMULATOR_HOST": "127.0.0.1:8080",
        "LOG_LEVEL_MSG": "debug",
        "LOG_LEVEL_OBJ": "error",
        "USE_REAL_TWITTERX": "false",
        "USE_REAL_NANOPUB": "false",
        "USE_REAL_PARSER": "false",
        "USE_REAL_EMAIL": "false"
      },
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": [
        "--config",
        "./.mocharc.nanopub.js",
        "test/__tests__/021-platforms.nanopub.format.test.ts"
      ],
      "outputCapture": "std",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Script: 01-user.notifications",
      "runtimeExecutable": "ts-node",
      "args": [
        "--project",
        "./tsconfig.scripts.json",
        "./scripts/01-user.notifications.ts"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "attach",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "test-nanopub",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "args": ["run", "test:nanopub"],
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}
